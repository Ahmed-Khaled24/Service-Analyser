<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<GridPane alignment="CENTER" vgap="20" hgap="20.0" xmlns:fx="http://javafx.com/fxml"
          fx:controller="JAVAFX_Controllers.User_Input" fx:id="MainGridPane" id="MainGridPane"
          stylesheets="@../Style.css">
    <VBox spacing="20" alignment="CENTER">
        <Label text="Please Enter The Excel File Below">
            <font>
                <Font name="Arial bold" size="20"/>
            </font>
        </Label>
        <HBox spacing="20" alignment="CENTER">
            <TextField prefWidth="230" fx:id="InputField"  editable="false"/>
            <Button fx:id="Browse_Button" text="Browse" prefWidth="100" onAction="#handleButtonClick"/>
        </HBox>

        <HBox spacing="20">
            <Button text="Submit" onAction="#handleButtonClick"  prefWidth="105" fx:id="Submit_Button"/>
            <Button text="Clear" onAction="#handleButtonClick" prefWidth="105" fx:id="Clear_Button"/>

        </HBox>
    </VBox>
</GridPane>